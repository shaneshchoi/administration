<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CompanyInfoFragmentOne">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="31sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="Global company" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:textSize="25sp"
        android:textColor="#FF9100"
        android:fontFamily="sans-serif"
        android:text="DCTCoder is . . ." />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="A global company. In recent five years since its establishment, DCT Coder has established 80 branches in countries around the world. Our rapidly growing company, DCT Coders, works with many global companies. " />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="360dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/globe" />
    <!--https://business.bell.ca/shop/medium-large/internet-private-networks/global-network-solutions -->
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ibm" />
    <!-- https://nrfbigshow.nrf.com/company/ibm-corporation -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/salesforce" />
    <!--https://www.stickpng.com/img/icons-logos-emojis/review-platforms-logos/salesforce-round-logo -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/apple" />
    <!--https://www.stickpng.com/img/icons-logos-emojis/iconic-brands/apple-logo-grey -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/netflix" />
    <!--https://www.iconfinder.com/icons/4375011/logo_netflix_icon -->
    <TextView
        android:id="@+id/descriptionFoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="740dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#919191"
        android:text="Copyright Â© 2023 DCTCoder All Rights Reserved." />

</FrameLayout>